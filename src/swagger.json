{
  "openapi": "3.0.0",
  "info": {
    "title": "Juscash - Web Service",
    "contact": {
      "email": "contato.celso.vaconcelos@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Servidor Local"
    }
  ],
  "paths": {
    "/api/users/create": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao criar usuário"
          }
        }
      }
    },
    "/api/users/update/{id}": {
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Atualiza um usuário",
        "description": "Atualiza um usuário",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao atualizar usuário"
          }
        }
      }
    },
    "/api/users/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Lista um usuário",
        "description": "Lista um usuário",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao listar usuário"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Autenticação de Usuários"
        ],
        "summary": "Autentica um usuário",
        "description": "Autentica um usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro ao autenticar usuário"
          }
        }
      }
    },
    "/api/auth/redefine/password": {
      "post": {
        "summary": "Redefinir senha do usuário - Painel web",
        "description": "Rota responsável por redefinir senha do usuário - Painel Web",
        "tags": [
          "Autenticação de Usuários"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "default": "email"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/change/password": {
      "post": {
        "summary": "Alterar senha do usuário - Painel web",
        "description": "Rota responsável por alterar senha do usuário - Painel Web",
        "tags": [
          "Autenticação de Usuários"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "recoveryCode": {
                    "type": "string",
                    "default": "codigo de recuperação"
                  },
                  "password": {
                    "type": "string",
                    "default": "nova senha"
                  },
                  "email": {
                    "type": "string",
                    "default": "nova senha"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "status": {
            "type": "enum",
            "enum": [
              "active",
              "inactive"
            ]
          }
        }
      },
      "User": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CreateUser"
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        ]
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "totalItems": {
            "type": "number",
            "default": 1
          },
          "currentPage": {
            "type": "number",
            "default": 1
          },
          "nextPage": {
            "type": "number",
            "default": 2
          },
          "prevPage": {
            "type": "number",
            "default": null
          },
          "lastPage": {
            "type": "number",
            "default": 1
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}